<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/public.head.ejs', {title: "ThesisMgr"}) %>

<body class="nav-md">
<div class="container body">
    <div class="main_container">

        <%- include('../../partials/public.navbar.ejs') %>
        <!-- /top navigation -->

        <!-- page content -->
        <div class="right_col" role="main">

            <div class="row">
                <div class="col-md-1">

                </div>
                <div class="col-md-10">
                    <div class="x_panel">
                        <div class="x_title">Đổi mật khẩu</div>
                        <div class="x_content">

                            <div class="row alert-container">
                                <!-- show any messages that come back with authentication -->

                                <% if (message && message.length > 0) { %>
                                <div class="alert alert-danger alert-dismissible fade in" role="alert" id="error-alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <strong>Error!</strong>
                                    <p id="error-alert-message" style="white-space:pre-wrap;"><%= message %></p>
                                </div>
                                <% } %>

                            </div>

                            <form class="form-horizontal form-label-left"
                                  action="/profile/api/change-password" method="POST" id="form">

                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Mật khẩu
                                        mới</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="password" class="form-control" id="new-password" autocomplete="off">
                                        <label id="errNew"></label>
                                    </div>

                                </div>


                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Nhập lại mật
                                        khẩu mới</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input type="password" class="form-control" style="color: #4cae4c"
                                               id="retype-new-password"/>
                                        <label id="errMatch"></label>
                                    </div>

                                </div>

                                <div class="form-group" style="text-align: center">
                                    <button type="submit" class="btn btn-primary">Change Password</button>
                                </div>
                            </form>
                        </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /page content -->

    <!-- footer content -->
    <%- include('../../partials/public.footer.ejs') %>
    <!-- /footer content -->
</div>
</div>

<%- include('../../partials/public.scripts.ejs') %>
<script type="text/javascript" src="/dist/js/public.profile.change_password.min.js"></script>
</body>
</html>