<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/admin.head.ejs', {title: "ThesisMgr"}) %>

<body>

<div id="wrapper">

    <% include ../../partials/admin.navbar.ejs %>

    <!-- Navigation -->
    <div id="page-wrapper">

        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Chương trình đào tạo</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>

            <div class="row alert-container">
                <!-- show any messages that come back with authentication -->

                <% if (message && message.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade in" role="alert" id="error-alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <strong>Error!</strong>
                    <p id="error-alert-message" style="white-space:pre-wrap;"><%= message %></p>
                </div>
                <% } %>

            </div>

            <div class="row">
                <div class="col-lg-8">

                    <% if (req.user.role == 'admin') {
                    faculties.forEach(function (faculty) { %>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <%= faculty.name %>
                        </div>
                        <div class="panel-body">
                            <% programs.filter(function (program) {
                                return program.faculty.id == faculty.id;
                            }).forEach(function (program) { %>
                            <div class="panel panel-default category-item">
                                <div class="panel-body">
                                    <%= program.name %>
                                    <a class="category-item edit" style="position: absolute; right: 60px" href="#" data-action="edit" data-id="<%=program.id%>">Edit</a>
                                    <a class="category-item delete" style="position: absolute; right: 10px" href="#" data-action="delete" data-id="<%=program.id%>">Delete</a>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                    <% })
                    } else { %>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <%= currentFaculty.name %>
                        </div>
                        <div class="panel-body">
                            <% programs.filter(function (program) {
                                return program.faculty.id == currentFaculty.id;
                            }).forEach(function (program) { %>
                            <div class="panel panel-default category-item">
                                <div class="panel-body">
                                    <%= program.name %>
                                    <a class="category-item edit" style="position: absolute; right: 60px" href="#" data-action="edit" data-id="<%=program.id%>">Edit</a>
                                    <a class="category-item delete" style="position: absolute; right: 10px" href="#" data-action="delete" data-id="<%=program.id%>">Delete</a>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                    <% } %>

                </div>
                <div class="col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Add a program
                        </div>
                        <div class="panel-body">
                            <form role="form" action="/admin/categories/programs" method="post">
                                <div class="form-group">
                                    <label>Program name</label>
                                    <input class="form-control new-program-name" type="text" name="name" required>
                                    <p class="help-block">Name of the new program that you want to add.</p>
                                </div>

                                <% if (req.user.role == 'admin') { %>
                                <div class="form-group">
                                    <label>Faculty</label>
                                    <select class="form-control" name="faculty_id">
                                        <% faculties.forEach(function (faculty) { %>
                                        <option value="<%=faculty.id%>"><%= faculty.name %></option>
                                        <% }) %>
                                    </select>
                                    <p class="help-block">Faculty of the new program that you want to add.</p>
                                </div>
                                <% }%>

                                <button type="submit" class="btn btn-primary">Thêm </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /#wrapper -->

<%- include ../../partials/admin.scripts.ejs %>

<script type="text/javascript" src="/dist/js/admin.categories.programs.min.js"></script>

</body>

</html>




