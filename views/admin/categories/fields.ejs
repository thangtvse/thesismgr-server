<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/head.ejs', {title: "ThesisMgr"}) %>

<body>

<div id="wrapper">

    <% include ../../partials/admin.navbar.ejs %>

    <!-- Navigation -->
    <div id="page-wrapper">

        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Fields</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>

            <div class="row">
                <!-- show any messages that come back with authentication -->
                <div class="alert alert-danger alert-dismissible fade in" role="alert" id="error-alert"
                        <% if (!(message && message.length > 0)) { %>
                     hidden
                        <% } %>
                >
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <strong>Error!</strong> <p id="error-alert-message" style="white-space:pre-wrap;"><%= message %></p>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Field hierachy
                        </div>
                        <div class="panel-body">
                            <%- field_hierarchy %>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Add a field
                        </div>
                        <div class="panel-body">

                            <form role="form" action="/admin/categories/fields" method="post">
                                <div class="form-group">
                                    <label>Field name</label>
                                    <input class="form-control new-field-name" type="text" name="name" required>
                                    <p class="help-block">Name of the new field that you want to add.</p>
                                </div>
                                <div class="form-group">
                                    <label>Parent field</label>
                                    <input class="new-field-parent-id" type="text" name="parent_id" hidden>
                                    <div class="dropdown">
                                        <button class="btn btn-default dropdown-toggle" type="button"
                                                id="category-search-drop-menu-button" data-toggle="dropdown"
                                                aria-haspopup="true" aria-expanded="true">
                                            No parent
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                            <li>
                                                <div class="form-group input-group category-search">
                                                    <input type="text" class="form-control category-search input">
                                                    <span class="input-group-btn">
                                                <button class="btn btn-default" type="button"><i
                                                            class="fa fa-search"></i>
                                                </button>
                                            </span>
                                                </div>
                                            </li>
                                            <li class="field-search-item"><a href="#" class="field-search-item link"
                                                                             data-name="No parent">No parent</a>
                                            </li>
                                            <li role="separator" class="divider"></li>
                                            <% fields.forEach(function (field) { %>
                                            <li class="field-search-item"><a href="#" data-name="<%= field.name %>"
                                                                             data-id="<%= field.id %>"
                                                                             class="field-search-item link"><%= field.name %></a>
                                            </li>
                                            <% }) %>
                                        </ul>
                                    </div>
                                    <p class="help-block">Parent of the new field that you want to add.</p>
                                </div>

                                <button type="submit" class="btn btn-primary">Add Field</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /#wrapper -->

<%- include ../../partials/scripts.ejs %>

<script type="text/javascript" src="/dist/js/categories.fields.min.js"></script>

</body>

</html>




